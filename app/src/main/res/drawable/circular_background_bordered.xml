<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/purple_500"/>
            <corners android:radius="8dp"/>
        </shape>

    </item>

    <!--  top shadow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:centerColor="#00FF0000"
                android:centerY="0.6"
                android:endColor="#00FF0000"
                android:startColor="#6BD8D8D8" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!--  bottom shadow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:centerColor="#00FF0000"
                android:centerY="0.5"
                android:endColor="#00FF0000"
                android:startColor="#6BD8D8D8" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item>
        <rotate>
        <shape android:shape="oval">
            <gradient
                android:centerColor="#00FF0000"
                android:centerY="0.3"
                android:endColor="#00FF0000"
                android:startColor="#6BD8D8D8" />
            <corners android:radius="8dp" />
        </shape>
        </rotate>
    </item>

    <item>
        <rotate android:fromDegrees="180">
            <shape android:shape="oval">
                <gradient
                    android:centerColor="#00FF0000"
                    android:centerY="0.3"
                    android:endColor="#00FF0000"
                    android:startColor="#6BD8D8D8" />
                <corners android:radius="8dp" />
            </shape>
        </rotate>
    </item>


    <item android:top="5dp"
        android:left="5dp"
        android:right="5dp"
        android:bottom="5dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="8dp"/>
        </shape>

    </item>
</layer-list>