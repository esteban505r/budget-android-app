<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/blue_200</item>
        <item name="background">@color/background</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="hintTextColor">@color/gray_100</item>
        <item name="android:textColorSecondary">@color/gray_100</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/signika_negative_regular</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SignikaNegativeRegularTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/signika_negative_regular</item>
    </style>

    <style name="SignikaNegativeSemiBoldTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/signika_negative_semi_bold</item>
    </style>

    <style name="SignikaNegativeMediumTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/signika_negative_medium</item>
    </style>

    <style name="SignikaNegativeBoldTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/signika_negative_bold</item>
    </style>

    <style name="SignikaNegativeLightTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/signika_negative_light</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
</resources>